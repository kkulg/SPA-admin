{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "types": [
      "vite/client", 
      "@intlify/vite-plugin-vue-i18n/client", 
      "@types/quill"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@pages/*": ["./src/pages/*"],
      "@layout/*": ["./src/layout/*"],
      "@utils/*": ["./src/utils/*"],
      "@utils": ["./src/utils/index"],
      "@config/*": ["./src/config/*"],
      "@config": ["./src/config/index"],
      "@apis/*": ["./src/apis/*"],
      "@apis": ["./src/apis/index"],
      "@router/*": ["./src/router/*"],
      "@router": ["./src/router/index"],
      "@components/*": ["./src/components/*"],
      "@components": ["./src/components/index"],
      "@store/*": ["./src/store/*"],
      "@store": ["./src/store/index"],
      "@services/*": ["./src/services/*"],
      "@services": ["./src/services/index"],
      "@directives/*": ["./src/directives/*"],
      "@directives": ["./src/directives/index"],
      "@common/*": ["./src/common/*"],
      "@common": ["./src/common/index"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
  ]
}
